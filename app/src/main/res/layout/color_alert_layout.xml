<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alertLayout" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewHueMessage"
                app:layout_row="0"
                app:layout_column="0"
                android:text="Hue: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewHueValue"
                app:layout_row="0"
                app:layout_column="1"
                app:layout_gravity="right"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarHue"
                app:layout_row="1"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"/>

            //saturation
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSatMessage"
                app:layout_row="2"
                app:layout_column="0"
                android:text="\nSaturation: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSatValue"
                app:layout_row="2"
                app:layout_column="1"
                app:layout_gravity="right"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarSat"
                app:layout_row="3"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"/>

            //lum
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLumMessage"
                app:layout_row="4"
                app:layout_column="0"
                android:text="\nLuminosity: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLumValue"
                app:layout_row="4"
                app:layout_column="1"
                app:layout_gravity="right"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarLum"
                app:layout_row="5"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"/>

        </android.support.v7.widget.GridLayout>
    </ScrollView>



</LinearLayout>
